<nav role="navigation" class="grid--sm-three-fourths grid--md-three-fifths grid--lg-half grid--xl-two-fifths nog navigation">
	<ul class="dsk--flex flex--wrap justify--between font--even-smaller">
		{% for item in menu.get_items %}
			<li class="nav-item {{item.classes | join(' ')}}">
				<a class="nav-link font--bold color--green text--uppercase letter--1" href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item ">
								<a class="nav-link font--bold color--green text--uppercase" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
</nav><!-- #nav -->