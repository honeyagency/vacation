<section class="section--image-grid hidden--mob spacing--vert-3 has--nav">
	<div class="block--init-images grid--one flex flex--wrap justify--around spacing--gutter">
		{% for image in home.gallery %}
			{% if loop.index <= 4 %}
				<div id="element-{{loop.index}}">
					<img
					data-original="{{image|resize(472)}}"
					data-action="zoom"
					alt=""
					data-original-set="
					{{image|resize(214)}} 213w,
					{{image|resize(250)}} 250w,
					{{image|resize(276)}} 276w,
					{{image|resize(472)}} 472w,
					{{image|resize(455)}} 455w,
					{{image|resize(480)}} 480w,
					{{image|resize(640)}} 640w,
					{{image|resize(720)}} 720w,
					{{image|resize(960)}} 960w,
					{{image|resize(1280)}} 1280w"
					sizes="33vw">
				</div>
			{% endif %}
		{% endfor %}
	</div>
	<div class="block--more-images grid--one spacing--gutter">
		{% for image in home.gallery %}
			{% if loop.index > 4 %}
				<div id="element-{{loop.index + 4 }}">
					<img
					data-action="zoom"
					alt=""
					data-original="{{image|resize(320)}}"
					data-original-set="
					{{image|resize(375)}} 750w,
					{{image|resize(540)}} 1080w,
					{{image|resize(640)}} 1280w,
					{{image|resize(683)}} 1366w,
					{{image|resize(720)}} 1440w"
					sizes="22vw">
				</div>
			{% endif %}
		{% endfor %}
	</div>
	<div class="text--right spacing--gutter">
		<a href="" class="gallery--button font--larger color--pink" id="viewGallery"><span>View More</span> <i class="icon-arrow--gallery" data-grunticon-embed></i></a>
	</div>
</section>