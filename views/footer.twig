<footer class="section--footer bg--texture">
	<section class="spacing--gutter flex flex--wrap max-wrap justify--around margin--center">
		<div class="">
			<i class="icon-logo-footer" data-grunticon-embed></i>
		</div>
		<div class="grid--one grid--sm-fourth">
			{% if home.hours %}
				{% for hours in home.hours %}
					<div>
						<span>{{hours.days}}</span>
						<span>{{hours.hours}}</span>
					</div>
				{% endfor %}
			{% endif %}
		</div>
		<div class="grid--one grid--sm-fifth">
			<span>{{options.address.street}}</span><br>
			<span>{{options.address.city}}</span>
			<span>{{options.address.state}} {{options.address.zip}}</span>
			{% include 'components/blocks/block--social.twig' %}
		</div>
		<div class="grid--one grid--sm-fourth grid--md-fifth">
			Sign up for updates:<br>
			{% include 'components/blocks/block--home-email-form.twig' %}</div>
		
	</section>
	<section class="section--sub-footer grid--one text--center color--gray font--rn font--even-smaller spacing--vert-1">
		&copy; {{"now"|date('Y')}} Vacation Bar <span class="spacing--horiz-1">|</span> All Rights Reserved <span class="spacing--horiz-1">|</span> Website Design by <a target="_blank" class="color--gray hover--pink" href="https://honeyagency.com/?ref=vacation">Honey Agency</a>
	</section>
</footer>